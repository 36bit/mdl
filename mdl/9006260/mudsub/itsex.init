<DEFINE READLINE ("AUX" LINE CHAR)
	<SET LINE "">
	<SET CHAR <READCHR>>
	<SET CHAR <READCHR>>
	<REPEAT ()
		<COND (<==? .CHAR <ASCII 27>> <RETURN .LINE>)
		      (ELSE <SET LINE <STRING .LINE .CHAR>> <SET CHAR <READCHR>>)>>>

<PROG (FNAME RESULT)
	<FLOAD "CLR;ITSNX NBIN">
	<PRINC "Enter binary file name (terminated by ESC): ">
	<SET FNAME <READLINE>>
	<SET RESULT <ITSEX .FNAME>>
	<COND (<NOT .RESULT> <PRINT .RESULT> <TERPRI>)>
	<QUIT>>
