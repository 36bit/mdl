DEFINE MACHAR NAME,TYPE,VAL,\LNT,WHERE,LAST
		TYPE==TCHSTR
		VECTGO WHERE
		ASCII \NAME!\
		LAST==$."
		TCHRS,,0
		$."-WHERE+1,,0
		VAL==-<LAST-WHERE>,,WHERE
		VECRET

