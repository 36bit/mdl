	LOCN==.-1
	VECTGO DUMMY1
	IFSE [PNAME],MAKAT [ARG]TUNBOU,0,OBLIS,LOCN
	IFSN [PNAME],MAKAT [PNAME]TUNBOU,0,OBLIS,LOCN
	VECRET
	TERMIN




DEFINE CHQUOTE NAME,\LOCN,TYP,VAL
